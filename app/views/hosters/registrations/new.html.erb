<%= render 'home/header' %>
<%= render "devise/shared/error_messages", resource: resource %>
<section class="hero is-fullheight is-primary is-bold">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered" style="    margin-top: 3%;">
        <div class="column is-5-tablet is-4-desktop is-4-widescreen">
          <%= form_for(resource, as: resource_name, html: {class:'box'}, url: registration_path(resource_name)) do |f| %>
          <p class="label has-text-centered is-size-5">
            Sign Up
          </p>
          <p class="has-text-centered is-size-6 has-text-danger"></p>
          <br/>
          <div class="field">
            <div class="control has-icons-left">
              <%= f.text_field :fName,class:"input",placeholder:"First name" %>
            </div>
          </div>
          <div class="field">
            <div class="control has-icons-left">
              <%= f.text_field :lName ,class:"input",placeholder:"Last name" %>
            </div>
          </div>
          <div class="field">
            <div class="control has-icons-left">
              <%= f.number_field :phone,class:"input",placeholder:"Phone number" %>
            </div>
          </div>
          <div class="field">
            <div class="control has-icons-left">
              <%= f.hidden_field :hoster, value:1  %>
            </div>
          </div>
          <div class="field">
            <div class="control has-icons-left">
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"input",placeholder:"Email" %>
            </div>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %>
                characters minimum)</em>
            <% end %><br/>
            <%= f.password_field :password, autocomplete: "new-password",class:"input",placeholder:"Password" %>

          </div>
          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"input",placeholder:"Repassword"  %>
          </div>
          <br/>
          <%= f.submit "Sign Up",class:"button is-success is-fullwidth" %>

          <br/>

          <div class="has-text-centered">
            <%= render "devise/shared/links" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
</section>
